main
    .container-fluid
        .content-container
            if !loggedIn
                form(action="/api/login" method="POST" )
                    .panel.panel-default
                        .panel-heading.text-center.textmuted Log In
                        .panel-body.text-center
                            .row
                                .col-sm-6
                                    label Username:
                                    br
                                    input#email(type="username" name="username" title="" autofocus required)
                                .col-sm-6
                                    label Password:
                                    br
                                    input#password(type="password" name="password" title="" required)
                            if status != 'Success'
                                span.text-danger #{status}
                        .panel-footer.text-right
                            input.btn.btn-default(type="submit" value="Submit")
            else
                .content-container
                    .row.text-center
                        h1 #{status}
                    .row.text-left
                        .col-sm-12
                            span To your&nbsp;
                                a(href="u/#{username}") profile
                    .row
                        form(action="/api/edituser" method="POST" )
                            .col-xs-1
                                label Title:&nbsp;
                                br
                                label First Name:
                                br
                                label Last Name:
                                br
                                label DoB:
                                br
                                label Username:
                                br
                                label Email Address
                                br
                                label Privileges:
                                br
                                label Created:
                            .col-xs-11.user-info
                                input.norm-toggle(value="#{title}" disabled)
                                input.norm-toggle(value="#{firstName}" disabled)
                                input.norm-toggle(value="#{lastName}" disabled)
                                input.norm-toggle(value="#{doB}" disabled)
                                input.norm-toggle(value="#{username}" disabled)
                                input.mod-toggle(value="#{emailAddress}" disabled)
                                input.ad-toggle(value="#{role}" disabled)
                                input(value="#{created}" disabled)
                    .row
                        .col-sm-2.pen-icon
                            // TODO Finish
                            a(onclick="toggleDisable('#{role}')").fa.fa-2x.fa-edit
                            a().fa.fa-2x.fa-check