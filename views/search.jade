doctype html
html(lang="en-GB" id="index")
    head
        include includes/head
        style.
            @media only screen and (min-width: 320px) {
                #search-page {
                    margin-top: 0;
                    background-size: initial;
                    background-position: center center;
                }
            }
            @media only screen and (min-width: 720px) {
                #search-page {
                    margin-top: 0;
                    background-size: 100% 100%;
                }
            }
body#page-top
    #wrapper
        header.text-light#search-page(style="background-image:url(\"/public/img/bg/bg#{bg}.jpg\");")
            .container-full.pad-top
                //TODO TABS FOR HOME, ABOUT ETC
                .col-lg-12.tabs
                    nav
                        ul
                        li.tab-current
                            a(href='#')
                            span Search
                        li
                          a(href='#')
                            span Home
                        li
                          a(href='#')
                            span Random
                        li
                          a(href='#')
                            span About
                        li
                          a(href='#')
                            span Contact
                .col-lg-12
                    .col-lg-offset-2.col-lg-8.text-center.v-center.content-box.search-container
                        h1 Bayes History
                        p.lead Search confidence ratings related to historical events
                        br
                        form.col-lg-12
                            .input-group.input-group-lg.col-sm-offset-3.col-sm-6
                                input.center-block.form-control.input-lg.text-center(type='text', title='Search', placeholder='Enter your search' autofocus required)
                                span.input-group-btn
                                    button.btn.btn-lg.btn-primary(type='button')
                                        i.fa.fa-search
    include includes/footer
    include includes/js
    include includes/hamburger
    include includes/betawarning
